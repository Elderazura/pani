# Binance API (required for live trading)
# Get keys from https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_SECRET=

# Use Binance testnet (futures) instead of mainnet
BINANCE_TESTNET=true

# Local LLM (Ollama) — used for signal generation when USE_LOCAL_LLM=true
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# Cloud LLM — fallback when USE_LOCAL_LLM=false or Ollama unavailable
# Provider: anthropic, openai, etc.
CLOUD_LLM_PROVIDER=anthropic
CLOUD_LLM_API_KEY=
CLOUD_LLM_MODEL=claude-haiku-4-5-20251001

# Prefer local Ollama over cloud LLM
USE_LOCAL_LLM=true

# Dry run mode — no real orders, only simulated
DRY_RUN=true

# Minimum 24h volume (USD) for a symbol to be tradable
MIN_VOLUME_USD=100000000

# Maximum leverage per position
MAX_LEVERAGE=3

# Stop loss percentage
STOP_LOSS_PCT=1.5

# Take profit percentage
TAKE_PROFIT_PCT=4.5

# Daily loss limit percentage — halt trading if exceeded
DAILY_LOSS_LIMIT_PCT=3.0

# Maximum concurrent open positions
MAX_OPEN_POSITIONS=3

# DuckDB database path
DB_PATH=data/futures_intel.duckdb
